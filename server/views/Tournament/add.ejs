<% include ../Partials/header.ejs %>
<% include ../Partials/main_nav.ejs %>
<div class="title">
    <h1><%= title %></h1>
</div>
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <form class="form" method="POST">
                <div class="form-group">
                    <label for="nameTextField">Tournament Name</label>
                    <input type="text" class="form-control" id="nameTextField" 
                    placeholder="Enter the Tournament Name" name="Name" required>
                </div>
                <div class="form-group">
                    <label for="locationTextField">Tournament Location</label>
                    <input type="text" class="form-control" id="locationTextField" 
                    placeholder="Enter the Tournament's Location" name="Location" required>
                </div>
                <div class="form-group">
                    <label for="startTextField">Tournament's Start Date</label>
                    <input type="text" class="form-control" id="startTextField" 
                    placeholder="Enter the Tournament's Start Date" name="Start" required>
                </div>
                <div class="form-group">
                    <label for="endTextField">Tournament's End Date</label>
                    <input type="text" class="form-control" id="endTextField" 
                    placeholder="Enter the Tournament's End Date" name="End" required>
                </div>
        <button class="btn btn-primary" type="submit">
            <i class="fas fa-edit"></i>
            Submit</button>
        <a href="/tournamentslist" class="btn btn-warning">
            <i class="fas fa-undo"></i>Cancel</a>
            </form>
        </div>
    </div>
</div>
<% include ../Partials/footer.ejs %>
